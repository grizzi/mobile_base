<?xml version="1.0" encoding="utf-8"?>
<launch>

  <arg name="description_name" default="/mobile_base/robot_description"/>
 
  <!-- Gazebo -->
  <include file="$(find mobile_base_gazebo)/launch/gazebo.launch">
    <arg name="description_name_for_gazebo" value="$(arg description_name)"/>
  </include>
  
  <!-- Controllers manager -->
  <include file="$(find mobile_base_control)/launch/control.launch"/>
  
  <!-- Controller manager gui -->
  <node name="rqt_controller_manager" type="rqt_controller_manager" pkg="rqt_controller_manager"/>

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
    respawn="false" output="screen">
    <remap from="robot_description" to="$(arg description_name)"/>
  </node>

  <!-- Open Rviz -->
  <node name="rviz" pkg="rviz" type="rviz"
  args="-d $(find mobile_base_description)/rviz/config.rviz"
  output="screen"/>

</launch>